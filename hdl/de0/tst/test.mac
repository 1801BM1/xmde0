;
; PI calculation test
; It calculates pi-number using the next C-algorithm
; https://crypto.stanford.edu/pbc/notes/pi/code.html
;
; #include <stdio.h>
; #define N 2800
; main() {
;   long r[N + 1], i, k, b, c;
;   c = 0;
;   for (i = 0; i < N; i++)
;      r[i] = 2000;
;   for (k = N; k > 0; k -= 14) {
;      d = 0;
;      i = k;
;      for(;;) {
;         d += r[i]*10000;
;         b = i*2 - 1;
;         r[i] = d % b;
;         d /= b;
;         i--;
;         if (i == 0) break;
;         d *= i;
;      }
;      printf("%.4d", (int)(c + d/10000));
;      c = d % 10000;
;   }
; }
;
; the time of the calculation is quadratic, so if T is time to calculate N digits
; then 4*T is required to calculate 2*N digits
;_____________________________________________________________________________
;
		.radix	10.			;
		.macro	mul32x16 ?l1 ?l2	; R3:R1*R2  -> R4:R0
.if ne HMUL					;
     		mul	R2, R3			;
		mov	R1, R0			;
		mul	R2, R0			;
		bpl 	l1			;
						;
		add 	R2, R0			;
l1:  		add 	R3, R0 			;
		mov 	R0, R4			;
		mov 	R1, R0			;
.iff						;
		clr	R0			;
		clr 	R4			;
		ror 	R2			;
		bcc 	l1			;
						;
		mov 	R1, R0			;
		mov 	R3, R4			;
l1:		asl	R1 			;
		rol	R3			;
		asr	R2			;
		bcc 	l2			;
						;
		add	R1, R0			;
		adc	R4			;
		add	R3, R4			;
		tst	R2			;
l2:		bne	l1			;
.endc						;
	      .endm				;
						;
						;
		.macro	mul16x16 ?l1 ?l2  	; R1*R2  -> R4:R0, R3 is used
.if ne HMUL					;
  		mul	R1, R2			;
		mov	R2, R4			;
		mov	R3, R0			;
.iff						;
		clr	R3			;
		mul32x16			;
.endc						;
		.endm				;
