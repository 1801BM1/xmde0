div32:						;
		mov 	R2, R4			;
		clr	R2			;
		div 	R1, R2			;
						;
		asl 	R1			;
		mov 	R2, R0			;
		mov 	R3, R2			;
		mov 	R4, R3			;
		div 	R1, R2			;
						;
		asl	R2			;
		asr 	R1			;
		cmp 	R3, R1			;
		bcs 	l2			;
						;
		inc	R2			;
		sub 	R1, R3			;
l2:  		mov 	R0, R1			;
