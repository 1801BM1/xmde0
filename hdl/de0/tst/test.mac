		.macro 	div0 ?l0		;
		asl	R2			;
		rol	R3			;
		cmp	R3, R1			;
		bcs 	l0			;
						;
		sub	R1, R3			;
		inc	R2			;
l0:						;
		.endm				;
						; R1:R2 = R3:R2/R1, R3 = R3:R2%R1, used: R0,R4
		.macro div32x16 ?div32 ?exit ?l1 ?l2
						; may work wrong if R1>$7fff
.if ne HDIV					;
		mov	R3, R4			;
		inc	R4			;
		asl 	R4 			; this division implementation is limited 
		cmp	R4, R1			;
		bcc 	div32			; may work wrong if R1>$3fff or R3>$7fff
						;
		mov 	R2, R4			;
		mov 	R3, R2			;
		mov	R4, R3			;
		div 	R1, R2			;
l1: 		clr 	R1			;
    		br 	exit			;
